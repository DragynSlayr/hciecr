<UserControl x:Class="CPSC481_Interface.GridSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CPSC481_Interface"
             mc:Ignorable="d" MouseDown="UserControl_MouseDown" Cursor="Hand">
    <Grid>
        <Rectangle x:Name="BG" Fill="#FFCF06" Stroke="Black" StrokeThickness="0.5"/>
        <Label x:Name="SectionType" Content="Section" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        <Label x:Name="EnrolStatus" Content="E" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-5,0,0" FontWeight="ExtraBold" FontSize="14" Foreground="DarkGreen" Visibility="Hidden"/>
        <Border x:Name="EnrolBorder" BorderThickness="3" BorderBrush= "Black" Visibility="Hidden"/>
    </Grid>
</UserControl>