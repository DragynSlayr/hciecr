<Window x:Class="CPSC481_Interface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPSC481_Interface"
        mc:Ignorable="d"
        Title="CourseRegistration" Height="720" Width="1080">
    <Border Padding="10" Background="LightBlue">
        <Grid Background="AliceBlue" ShowGridLines="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!-- Column 0 -->
            <Grid Grid.Column="0" Margin="5,5,5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0">
                    <TextBlock Text="COURSES" TextAlignment="Center" FontSize="25" FontWeight="Bold" />
                </StackPanel>
                <StackPanel Grid.Row="1">
                    <TextBlock Text="COURSE NAME HERE" TextAlignment="Center" FontSize="20" FontWeight="Bold" />
                    <TextBlock Text="Course Description:" />
                </StackPanel>
            </Grid>

            <!-- Column 1 -->
            <StackPanel Grid.Column="1" Margin="5,5,5,0">
                <TextBlock Text="Search Course:" />
                <TextBox Padding="2" />
            </StackPanel>

            <!-- Column 2 -->
            <Grid Grid.Column="2" Margin="5,5,5,0" ShowGridLines="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.2" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="0.2*" />
                </Grid.RowDefinitions>
                
                <!-- Calendar -->
                <TabPanel>
                    <TextBlock Text="Current Selected Semester:" />
                    <RadioButton Content="F2018" Margin="5,2,-10,0" IsChecked="True"/>
                    <RadioButton Content="W2019" Margin="20,2,-20,0" />
                    <RadioButton Content="P2019" Margin="30,2,-30,0" />
                    <RadioButton Content="S2018" Margin="40,2,-40,0" />
                </TabPanel>
                <Grid Grid.Row="1" Background="Beige" ShowGridLines="True">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.5*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Grid.Row="0" Text="Mon" TextAlignment="Center" FontWeight="Bold" />
                    <TextBlock Grid.Column="1" Grid.Row="0" Text="Tue" TextAlignment="Center" FontWeight="Bold" />
                    <TextBlock Grid.Column="2" Grid.Row="0" Text="Wed" TextAlignment="Center" FontWeight="Bold" />
                    <TextBlock Grid.Column="3" Grid.Row="0" Text="Thu" TextAlignment="Center" FontWeight="Bold" />
                    <TextBlock Grid.Column="4" Grid.Row="0" Text="Fri" TextAlignment="Center" FontWeight="Bold" />
                    <TextBlock Grid.Column="5" Grid.Row="0" Text="Sat" TextAlignment="Center" FontWeight="Bold" />
                    <TextBlock Grid.Column="6" Grid.Row="0" Text="Sun" TextAlignment="Center" FontWeight="Bold" />
                    
                </Grid>

                <!-- Section Selection -->
                <StackPanel Grid.Row="2">
                    <TextBlock Text="Select Course Sections:"/>
                </StackPanel>

                <Button Grid.Row="3" Content="Add Course to Cart"></Button>

            </Grid>

        </Grid>
    </Border>
</Window>
